server {
    listen 80;
    server_name {{ site_host }};

    location = /auth-waf {
        internal;

        proxy_pass http://waf_auth_engine/inspect;
        proxy_method POST;

        proxy_pass_request_body on;
        proxy_set_body $request_body;
        proxy_set_header Content-Length $content_length;
        proxy_set_header Content-Type $content_type;

        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Real-IP $remote_addr;

        proxy_set_header X-Original-Method $request_method;
        proxy_set_header X-Original-URI $request_uri;
        proxy_set_header X-Original-Host $host;
        proxy_set_header X-Original-Proto $scheme;
        proxy_set_header X-Original-Query $query_string;
        proxy_set_header X-Request-ID $request_id;

        proxy_set_header Host $host;
    }

    location / {
        auth_request /auth-waf;
        error_page 401 = @waf_forbidden;
        error_page 403 = @waf_forbidden;

        proxy_pass {{ upstream_url }};
        proxy_http_version 1.1;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Request-ID $request_id;
{% if preserve_host_header %}
        proxy_set_header Host $host;
{% else %}
        proxy_set_header Host {{ upstream_host_header }};
{% endif %}
{% if websocket_enabled %}
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
{% else %}
        proxy_set_header Connection "";
{% endif %}
{% if is_https_upstream %}
        proxy_ssl_server_name {% if enable_sni %}on{% else %}off{% endif %};
        proxy_ssl_name {{ upstream_ssl_name }};
{% endif %}
    }

    location @waf_forbidden {
        return 403;
    }
}
